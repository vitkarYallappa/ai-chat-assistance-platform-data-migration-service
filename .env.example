# Sample environment file for the Data Migration Service
# Copy this file to .env and adjust the values as needed

# Application settings
APP_NAME=data-migration-service
API_PREFIX=/api
ENVIRONMENT=development
DEBUG=true

# Security settings
SECRET_KEY=change-this-in-production
API_KEY_HEADER=X-API-Key
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# Logging settings
LOG_LEVEL=INFO
JSON_LOGS=false

# Database settings - PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=chat_assistant

# Database settings - MongoDB
# Option 1: Use full URI
MONGODB_URI=mongodb://admin:password@localhost:27017/?authSource=admin
# Option 2: Use individual components
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password
MONGODB_DB=chat_assistant

# Shard settings
SHARD_CONFIG_PATH=
SHARD_DISCOVERY_ENABLED=false

# Message broker settings
MESSAGE_BROKER_TYPE=rabbitmq  # rabbitmq or kafka
RABBITMQ_URI=amqp://guest:guest@localhost:5672/
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Integration settings
MCP_SERVICE_URL=http://localhost:8001
MCP_SERVICE_API_KEY=dev-api-key
CHAT_SERVICE_URL=http://localhost:8002
CHAT_SERVICE_API_KEY=dev-api-key
ADAPTOR_SERVICE_URL=http://localhost:8003
ADAPTOR_SERVICE_API_KEY=dev-api-key

# Performance settings
DEFAULT_BATCH_SIZE=1000
MAX_PARALLEL_MIGRATIONS=10
THROTTLE_MIGRATIONS=false
THROTTLE_RATE=100  # operations per second

# Retry settings
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=1.5